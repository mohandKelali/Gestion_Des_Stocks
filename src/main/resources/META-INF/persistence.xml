		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" /> <!--crÃ©er la table si elle n'existe pas-->
			<property name="hibernate.show_sql" value="true" /> <!--safficher les requetes sql-->
		</properties>
	</persistence-unit>
</persistence>